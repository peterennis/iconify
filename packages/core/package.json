		"@typescript-eslint/parser": "^3.10.1",
		"chai": "^4.2.0",
		"eslint": "^7.7.0",
		"mocha": "^8.1.2",
		"typescript": "^4.0.2"
	},
	"dependencies": {
		"@cyberalien/redundancy": "^1.0.0",
		"@iconify/types": "^1.0.3"
	},
